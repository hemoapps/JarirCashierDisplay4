<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="position" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="positionL" parent="position">
        <item name="android:text">Left</item>
    </style>
    <style name="positionE" parent="position">
        <item name="android:text">End</item>
    </style>
    <style name="positionR" parent="position">
        <item name="android:text">Right</item>
    </style>

    <style name="positionLeft" parent="position">
        <item name="android:text">Left</item>
    </style>

    <style name="positionEnd" parent="position">
        <item name="android:text">End</item>
    </style>

    <style name="positionRight" parent="position">
        <item name="android:text">Right</item>
    </style>

    <style name="cashierNumber" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
        <!--        <item name="android:rotation">-90</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>



    <style name="array" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="fullArray" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>


    <style name="tablePic" parent="">
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:src">@mipmap/cashier_table</item>
    </style>

    <style name="layout" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
