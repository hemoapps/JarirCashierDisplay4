                        android:onClick="onClick"/>
                </LinearLayout>

                <LinearLayout style="@style/array">

                    <TextView style="@style/positionR" />

                    <ImageView
                        android:id="@+id/c4r"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <TextView
                style="@style/cashierNumber"
                android:text="Cashier 5" />

            <LinearLayout
                android:id="@+id/Table5"
                style="@style/fullArray">


                <LinearLayout style="@style/array">

                    <TextView style="@style/positionL" />

                    <ImageView
                        android:id="@+id/c5l"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>

                <LinearLayout style="@style/array">

                    <TextView style="@style/positionE" />

                    <ImageView
                        android:id="@+id/c5e"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>

                <LinearLayout style="@style/array">

                    <TextView style="@style/positionR" />

                    <ImageView
                        android:id="@+id/c5r"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <TextView
                style="@style/cashierNumber"
                android:text="Cashier 6" />

            <LinearLayout
                android:id="@+id/Table6"
                style="@style/fullArray">


                <LinearLayout style="@style/array">

                    <TextView style="@style/positionL" />

                    <ImageView
                        android:id="@+id/c6l"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>

                <LinearLayout style="@style/array">

                    <TextView style="@style/positionE" />

                    <ImageView
                        android:id="@+id/c6e"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>

                <LinearLayout style="@style/array">

                    <TextView style="@style/positionR" />

                    <ImageView
                        android:id="@+id/c6r"
                        style="@style/tablePic"
                        android:onClick="onClick"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:onClick="takeScreenShot"/>

</LinearLayout>